<canvas id="myChart" width="300" height="100"> </canvas>
  <script>
    const ctx = document.getElementById("myChart").getContext('2d');
    const myChart = new Chart(ctx, {
      type: 'line',
      data: {
        labels: ['6日前', '5日前', '4日前', '3日前', '2日前', '1日前', '今日'],
          datasets: [{
            label: "投稿数",
            lineTension: 0.5,
            data: [<%= books.created_day(6).count %>, <%= books.created_day(5).count %>, <%= books.created_day(4).count %>, <%= books.created_day(3).count %>, <%= books.created_day(2).count %>, <%= yesterday.count %>, <%= today.count%>],
            backgroundColor: 'rgba(180, 80, 220, 1.0)',
            borderColor: 'rgba(180, 80, 220, 1.0)',
            fill: false
          }]
      },
    });
  </script>
